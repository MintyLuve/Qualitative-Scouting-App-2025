<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpPopup"
    android:id="@+id/help_full_page">
    <LinearLayout
        android:id="@+id/help_popup"
        android:visibility="visible"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:weightSum="12.5"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/box_background">
        <TextView
            android:id="@+id/help_header_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/help_screen_header_1_page_1"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/text_grey"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/help_text_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/help_screen_text_1_page_1"
            android:autoSizeTextType="uniform"
            android:gravity="center|left"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_grey"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="5" />
        <ImageView
            android:layout_width="270dp"
            android:layout_height="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dotted_line"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/help_header_2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/help_screen_header_1_page_2"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/text_grey"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/help_text_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/help_screen_text_2_page_2"
            android:autoSizeTextType="uniform"
            android:gravity="center|left"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_grey"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="4"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/help_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/help_reference"
            android:layout_weight="5"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/help_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_left"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/help_page_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pg. 1"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:fontFamily="@font/helvetica_bold"
                android:textColor="@color/text_grey"
                android:layout_weight="1"
                android:padding="2dp"
                android:background="@drawable/box_background"/>
            <ImageButton
                android:id="@+id/help_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_right"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center_horizontal"
            android:text="Click Anywhere To Close"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/text_grey" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>